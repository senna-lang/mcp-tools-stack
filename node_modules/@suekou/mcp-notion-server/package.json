{
  "name": "@suekou/mcp-notion-server",
  "version": "1.0.2",
  "description": "MCP server for interacting with Notion API based on Node",
  "license": "MIT",
  "author": "Kosuke Suenaga (https://github.com/suekou/mcp-notion-server)",
  "type": "module",
  "main": "build/index.js",
  "bin": {
    "mcp-notion-server": "./build/index.js"
  },
  "files": [
    "build",
    "Readme.md",
